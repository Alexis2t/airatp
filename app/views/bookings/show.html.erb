<div class="container">
  <div class="card-test">
    <div class="card-info">
      <h3 style="text-align: center"><%= @booking.vehicle.name %></h3>
      <div class="center">
       <i class="fa-solid fa-star">   4.9</i>
       <i class="fa-solid fa-user-astronaut">      <%= @booking.vehicle.passengers_capacity%></i>
      </div>
      <p class="card-text mt-5"><%=@booking.vehicle.description%></p>
    </div>
    <% if @booking.vehicle.photo.attached? %>
      <%= cl_image_tag(@booking.vehicle.photo.key, height: 300, width: 400, crop: :fill) %>
    <% else %>
      <%= cl_image_tag('eaa35mokrpgg4yg15ngp', height: 300, width: 400, crop: :fill) %>
    <% end %>

  </div>


