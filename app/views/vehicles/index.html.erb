<%= render "shared/navbar" %>


<div class="container">

  <h1>Vehicles list</h1>
  <div class="flexbox">
    <div>
        <!-- Trigger/Open The Modal -->
      <button class="filter-additionnal", id="modalTrigger">Filters</button>

      <!-- The Modal -->
      <div id="myModal" class="modal">

        <!-- Modal content -->
        <div class="modal-content">
          <span class="close">&times;</span>
          <p>contenu de la modal</p>
        </div>

      </div>

      <% @vehicles.each do |vehicle| %>
        <div class="">
          <div class="p-3">
            <div class="card">
              <% if vehicle.photo.attached? %>
                <%= cl_image_tag(vehicle.photo.key, height: 300, width: 400, crop: :fill) %>
              <% else %>
                <%= cl_image_tag('/eaa35mokrpgg4yg15ngp', height: 300, width: 400, crop: :fill) %>
              <% end %>
              <div class="d-flex vehicle-description flex-column">
                <h2><%= link_to vehicle.name, vehicle_path(vehicle) %></h2>
                <p>Capacity: <%= vehicle.passengers_capacity %> <%= vehicle.passengers_capacity > 1 ? 'peoples' : 'person' %></p>
                <p>Price: <%= vehicle.price_per_day %>â‚¬/day</p>
                <p>Vehicle type: <%= vehicle.vehicle_type %></p>
                <p>Ecological label: <%= vehicle.ecological_label %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div id="map-container"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>




<script>
// Get the modal
var modal = document.getElementById("myModal");

// Get the button that opens the modal
var modaltrigger = document.getElementById("modalTrigger");

// Get the <span> element that closes the modal
var span = document.getElementsByClassName("close")[0];

// When the user clicks the button, open the modal
modaltrigger.onclick = function() {
  modal.style.display = "block";
}

// When the user clicks on <span> (x), close the modal
span.onclick = function() {
  modal.style.display = "none";
}

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
  if (event.target == modal) {
    modal.style.display = "none";
  }
}
</script>
